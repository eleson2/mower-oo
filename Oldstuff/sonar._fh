#ifndef _ASYNCSONARLIB_h
#define _ASYNCSONARLIB_h

#include "Arduino.h"
#include <YetAnotherPcInt.h> 

class Sonar {
public:

    uint8_t TriggerPin;
    uint8_t ResponsePin;
    volatile unsigned int* Distance; // Positive=measured, 0=AwaitingResult
    
    // Constructor(s)
	Sonar(uint8_t trigger_pin, uint8_t _response_pin, unsigned int* _distance);

	void Measure();
	void Stop();

private:
	volatile unsigned long _responseStartMicros;

	static void responseStart(Sonar*);
	static void responseEnd(Sonar*);
};

#endif
